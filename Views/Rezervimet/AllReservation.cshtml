                <td>
                    @Html.DisplayFor(modelItem => item.Adresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Makinat.Modeli)
                </td>
                <td>
                    <a class="btn" asp-action="Delete" asp-controller="Rezervimet" asp-route-id="@item.ID">E dorezuar</a>
                </td>
            </tr>
        }
    </tbody>
