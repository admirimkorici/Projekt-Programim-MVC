@model Projekt_Programim_MVC.Models.Makina

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Shto nje makine</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" accept="image/*" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modeli" class="control-label"></label>
                <input asp-for="Modeli" class="form-control" />
                <span asp-validation-for="Modeli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pershkrimi" class="control-label"></label>
                <input asp-for="Pershkrimi" class="form-control" />
                <span asp-validation-for="Pershkrimi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vit_Prodhimi" class="control-label"></label>
                <input asp-for="Vit_Prodhimi" class="form-control" />
                <span asp-validation-for="Vit_Prodhimi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ERezervuar" class="control-label col-md-12"></label>
                <div class="col-md-10">
                    <input asp-for="ERezervuar" class="form" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Kosto1Dite" class="control-label"></label>
                <input asp-for="Kosto1Dite" class="form-control" />
                <span asp-validation-for="Kosto1Dite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipiID" class="control-label"></label>
                <select asp-for="TipiID" class="form-control" asp-items="ViewBag.TipiID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Shto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
