@model IEnumerable<Projekt_Programim_MVC.Models.Makina>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modeli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pershkrimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vit_Prodhimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ERezervuar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kosto1Dite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Modeli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pershkrimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vit_Prodhimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ERezervuar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kosto1Dite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IMG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipi.Emri)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
